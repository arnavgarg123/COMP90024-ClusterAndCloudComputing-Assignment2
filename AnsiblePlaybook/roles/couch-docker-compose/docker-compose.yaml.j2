version: "3.5"
networks:
  network:
services:
  server-0:
    image: couchdb
    ports:
      - "5984:5984"
      - "5986:5986"
    environment:
      COUCHDB_PASSWORD: admin
      COUCHDB_SECRET: 0123456789abcdef0123456789abcdef
      COUCHDB_USER: admin
      NODENAME: couchdb-0
    networks:
      network:
        aliases:
          - couchdb-0.local.com
    volumes:
      - volume-0:/opt/couchdb/data
volumes:
  volume-0:
